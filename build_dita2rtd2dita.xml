<project name="fox.jason.readthedocs">

	<target depends="build-init" name="rtd2dita.init">
		<!-- This defines the output file -->
		<dita-ot-fail id="DOTA069F">
			<condition>
				<not>
					<available file="${args.input}" type="file"/>
				</not>
			</condition>
			<param name="1" value="${args.input}"/>
		</dita-ot-fail>
		<!-- This defines the output file -->
		<basename file="${args.input}" property="svrl.filename.root" suffix=".ditamap"/>
		<dirname property="args.input.dir" file="${args.input}"/>
	</target>



	<target name="rtd2dita">
		<fail/>
	</target>


	<!--
		Ant target executed to create a readthedocs file
	-->
	<target depends="rtd2dita.init, rtd2dita" name="dita2rtd2dita"/>
</project>